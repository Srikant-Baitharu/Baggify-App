<%- include('./partials/header') %>

<% if (error) { %>
  <div class="fixed top-5 left-1/2 transform -translate-x-1/2 z-50 px-4 py-2 bg-red-500 text-white rounded-md shadow-md">
    <%= error %>
  </div>
<% } %>

<div class="min-h-screen flex flex-col md:flex-row items-center justify-center px-6 md:px-20 gap-10 py-10">
  <!-- Register Section -->
  <div class="w-full md:w-1/2 max-w-md">
    <h3 class="text-3xl sm:text-4xl font-bold mb-2">Welcome to <span class="text-blue-500">Bag<span class="text-red-500">gify</span></span></h3>
    <h4 class="text-xl sm:text-2xl mb-6">Create Your Account</h4>
    <form autocomplete="off" action="/users/register" method="post" class="space-y-4">
      <input
        class="w-full bg-zinc-100 border border-zinc-200 px-4 py-2 rounded-md"
        type="text" placeholder="Full Name" name="fullname" required />
      <input
        class="w-full bg-zinc-100 border border-zinc-200 px-4 py-2 rounded-md"
        type="email" placeholder="Email" name="email" required />
      <input
        class="w-full bg-zinc-100 border border-zinc-200 px-4 py-2 rounded-md"
        type="password" placeholder="Password" name="password" required />
      <input
        class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-full cursor-pointer transition"
        type="submit" value="Create My Account" />
    </form>
  </div>

  <!-- Login Section -->
  <div class="w-full md:w-1/2 max-w-md">
    <h4 class="text-xl sm:text-2xl mb-6">Login to Your Account</h4>
    <form autocomplete="off" action="/users/login" method="post" class="space-y-4">
      <input
        class="w-full bg-zinc-100 border border-zinc-200 px-4 py-2 rounded-md"
        type="email" placeholder="Email" name="email" required />
      <input
        class="w-full bg-zinc-100 border border-zinc-200 px-4 py-2 rounded-md"
        type="password" placeholder="Password" name="password" required />
      <input
        class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-full cursor-pointer transition"
        type="submit" value="Login" />
    </form>
  </div>
</div>

<%- include('./partials/footer') %>
