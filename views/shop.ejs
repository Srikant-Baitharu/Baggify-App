<%- include('./partials/header') %>

<% if (typeof success !== 'undefined' && success.length > 0) { %>
  <div class="fixed top-5 left-1/2 -translate-x-1/2 bg-blue-500 text-white px-4 py-2 rounded shadow z-50">
    <%= success %>
  </div>
<% } %>

<div class="w-full min-h-screen flex flex-col md:flex-row gap-10 px-4 md:px-16 py-10">
  <!-- Sidebar -->
  <aside class="w-full md:w-1/4 flex flex-col gap-8">
    <!-- Sort By -->
    <div class="flex items-center gap-3">
      <h3 class="text-lg font-semibold">Sort by</h3>
      <form action="/shop">
        <select name="sortby" class="border px-3 py-2 rounded">
          <option value="popular">Popular</option>
          <option value="newest">Newest</option>
        </select>
      </form>
    </div>

    <!-- Categories -->
    <div class="flex flex-col gap-2">
      <h4 class="text-md font-semibold">Categories</h4>
      <a href="#" class="text-blue-600 hover:underline">New Collection</a>
      <a href="#" class="text-blue-600 hover:underline">All Products</a>
      <a href="#" class="text-blue-600 hover:underline">Discounted Products</a>
    </div>

    <!-- Filters -->
    <div class="flex flex-col gap-2">
      <h4 class="text-md font-semibold">Filter by:</h4>
      <a href="#" class="text-blue-600 hover:underline">Availability</a>
      <a href="#" class="text-blue-600 hover:underline">Discount</a>
    </div>
  </aside>

  <!-- Product Grid -->
  <main class="w-full md:w-3/4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% products.forEach(function(product) { %>
      <div class="rounded shadow overflow-hidden bg-white flex flex-col">
        <!-- Product Image -->
        <div class="h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
          <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>" class="h-[10rem] object-contain">
        </div>

        <!-- Product Info -->
        <div class="flex justify-between items-center px-4 py-3 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
          <div>
            <h3 class="font-semibold"><%= product.name %></h3>
            <p class="text-sm">â‚¹ <%= product.price %></p>
          </div>
          <a href="/addtocart/<%= product._id %>" class="w-8 h-8 bg-white flex items-center justify-center rounded-full shadow">
            <i class="ri-add-line"></i>
          </a>
        </div>
      </div>
    <% }) %>
  </main>
</div>

<%- include('./partials/footer') %>
